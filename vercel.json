{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/generate-cv",
      "dest": "/api/generate-cv.js"
    },
    {
      "src": "/api/ats-analyze-file",
      "dest": "/api/ats-analyze-file.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/sobre",
      "dest": "/server.js"
    },
    {
      "src": "/contato",
      "dest": "/server.js"
    },
    {
      "src": "/dicas",
      "dest": "/server.js"
    },
    {
      "src": "/cv/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/privacidade",
      "dest": "/server.js"
    },
    {
      "src": "/termos",
      "dest": "/server.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}