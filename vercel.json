{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/cv/:id",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/sobre",
      "destination": "/public/sobre.html"
    },
    {
      "source": "/contato",
      "destination": "/public/contato.html"
    },
    {
      "source": "/dicas",
      "destination": "/public/dicas.html"
    },
    {
      "source": "/empresa",
      "destination": "/public/empresa.html"
    },
    {
      "source": "/privacidade",
      "destination": "/public/privacidade.html"
    },
    {
      "source": "/termos",
      "destination": "/public/termos.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "public/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}